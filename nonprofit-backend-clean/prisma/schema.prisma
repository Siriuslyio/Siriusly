generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donor {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  balance Float
  votes   Vote[]
  ideas   ProjectIdea[]
}

model Project {
  id    Int    @id @default(autoincrement())
  name  String
  goal  Float
  spent Float
}

model ProjectIdea {
  id      Int    @id @default(autoincrement())
  idea    String
  donor   Donor  @relation(fields: [donorId], references: [id])
  donorId Int
  votes   Vote[]
}

model Vote {
  id      Int          @id @default(autoincrement())
  donor   Donor        @relation(fields: [donorId], references: [id])
  donorId Int
  idea    ProjectIdea  @relation(fields: [ideaId], references: [id])
  ideaId  Int
}
